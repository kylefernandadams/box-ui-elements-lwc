<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Content Uploader</masterLabel>
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="elementTitle" label="Title" type="String" default="Box Content Uploader"/>
            <property name="height" label="Height" type="String" default="425px"/>
            <property name="recordId" label="Record ID" type="String" default="{recordId}" />
            <property
                    name="scopes"
                    type="String"
                    label="Box Scopes"
                    description="Pass in the scopes to be used with the Box UI Element"
                    default="base_upload"
                />
        </targetConfig>
            <targetConfig targets="lightningCommunity__Default">
                <property name="elementTitle" label="Title" type="String" default="Box Content Uploader"/>
                <property name="height" label="Height" type="String" default="425px"/>
                <property
                    name="recordId"
                    type="String"
                    label="Record Id"
                    description="Pass the page's record id to the component variable"
                    default="{recordId}" 
                />
                <property
                    name="scopes"
                    type="String"
                    label="Box Scopes"
                    description="Pass in the scopes to be used with the Box UI Element"
                    default="base_upload"
                />
            </targetConfig>
            <targetConfig targets="lightning__FlowScreen">
                <property name="elementTitle" label="Title" type="String" default="Box Content Uploader"/>
                <property name="height" label="Height" type="String" default="425px"/>
                <property
                    name="recordId"
                    type="String"
                    label="Record Id"
                    description="Pass the page's record id to the component variable" 
                    default="{recordId}" 
                />
                <property
                    name="folderId"
                    type="String"
                    label="Box Folder Id"
                    description="Pass in the folderId stored in the FRUP record"
                />
                <property
                    name="scopes"
                    type="String"
                    label="Box Scopes"
                    description="Pass in the scopes to be used with the Box UI Element"
                    default="base_upload"
                />
            </targetConfig>
    </targetConfigs>
</LightningComponentBundle>